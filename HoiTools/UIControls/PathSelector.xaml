<UserControl x:Class="UIControls.PathSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UIControls"
             mc:Ignorable="d" Height="20" Loaded="UserControl_Loaded">
    <StackPanel Orientation="Horizontal">
        <TextBox x:Name="path" TextWrapping="Wrap" Text="{Binding Path=Path, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}" GotFocus="path_GotFocus" LostFocus="path_LostFocus" Width="169"/>
        <Button x:Name="button" Content="..." Width="{Binding Path=Height, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}" Click="button_Click"/>
    </StackPanel>
</UserControl>
