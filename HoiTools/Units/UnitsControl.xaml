<UserControl x:Class="Units.UnitsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Units"
             mc:Ignorable="d" d:DesignWidth="416.053" d:DesignHeight="280.144">
    <!--<Grid>
        <TabControl x:Name="tabControl"/>
    </Grid>-->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <ListBox x:Name="lbTypes" Grid.Column="0" ItemsSource="{Binding Path=(pl:UnitTypes)}"/>
        <ListBox x:Name="lbModels" Grid.Column="1"/>
        <DataGrid x:Name="dataGrid" Grid.Column="2" IsEnabled="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Width="*"/>
                <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
